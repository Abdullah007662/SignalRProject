@model CreateContactDTO
@{
    ViewData["Title"] = "CreateContact";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}


<div class="container-fluid pt-4 px-4">
    <div class="row g-4">
        <div class="col-12">
            <div class="bg-default rounded h-100 p-4">
                <h6 class="mb-4 text-white">Yeni İletişiö Ekleme Sayfası</h6>
                <form method="post">
                    <div class="mb-3">
                        <label class="form-label text-white">Başlık</label>
                        <input type="text" asp-for="Location" class="form-control" />
                    </div>
                    <div class="mb-3">
                        <label class="form-label text-white">Açıklama</label>
                        <input type="text" asp-for="PhoneNumber" class="form-control" />
                    </div>
                    <div class="mb-3">
                        <label class="form-label text-white">Image Url</label>
                        <input type="text" asp-for="Email" class="form-control" />
                    </div>
                    <div class="mb-3">
                        <label class="form-label text-white">Alt Acıklama</label>
                        <input type="text" asp-for="FooterDescription" class="form-control" />
                    </div>


                    <button type="submit" class="btn btn-success">İletişimi Kaydet</button>
                </form>
            </div>
        </div>
    </div>
</div>

