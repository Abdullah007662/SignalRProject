@model CreateSocialMediaDTO
@{
    ViewData["Title"] = "CreateSocialMedia";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="container-fluid pt-4 px-4">
    <div class="row g-4">
        <div class="col-12">
            <div class="bg-default rounded h-100 p-4">
                <h6 class="mb-4 text-white">Yeni Sosyal Medya Ekleme Sayfası</h6>
                <form method="post">
                    <div class="mb-3">
                        <label class="form-label text-white">Başlık</label>
                        <input type="text" asp-for="Title" class="form-control" />
                    </div>
                    <div class="mb-3">
                        <label class="form-label text-white">İkon</label>
                        <input type="text" asp-for="Icon" class="form-control" />
                    </div>
                    <div class="mb-3">
                        <label class="form-label text-white">Url</label>
                        <input type="text" asp-for="Url" class="form-control" />
                    </div>
                    <button type="submit" class="btn btn-success">Sosyal Medayayı Kaydet</button>
                </form>
            </div>
        </div>
    </div>
</div>

