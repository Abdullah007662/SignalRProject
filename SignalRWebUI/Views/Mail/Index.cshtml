@model SignalRWebUI.DTO.MailDTO.CreateMailDTO

@{
    ViewData["Title"] = "Mail Gönder";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}


        <h4 class="page-title">Mail Gönderme Paneli</h4>
        <div class="row">
            <div class="col-md-12">
                <form method="post">
                    <div class="card">
                        <div class="card-header">
                            <div class="card-title">Mail Gönder</div>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label for="ReceiverMail">Alıcı Mail Adresi</label>
                                <input type="text" class="form-control" asp-for="ReceiverMail" />
                            </div>
                            <div class="form-group">
                                <label for="Subject">Konu</label>
                                <input type="text" class="form-control" asp-for="Subject" />
                            </div>
                            <div class="form-group">
                                <label for="Body">Mesajınız</label>
                                <textarea rows="5" class="form-control" asp-for="Body"></textarea>
                            </div>
                        </div>
                        <div class="card-footer">
                            <button type="submit" class="btn btn-primary">Gönder</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>

