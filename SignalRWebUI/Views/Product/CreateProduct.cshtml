@model CreateProductDTO

@{
    ViewData["Title"] = "Yeni Ürün Ekle";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="container-fluid pt-4 px-4">
    <div class="row g-4">
        <div class="col-12">
            <div class="bg-default rounded h-100 p-4">
                <h6 class="mb-4 text-white">Yeni Ürün Ekleme Sayfası</h6>
                <form method="post">
                    <div class="mb-3">
                        <label class="form-label text-white">Ürün Adı</label>
                        <input type="text" asp-for="ProductName" class="form-control" />
                    </div>

                    <div class="mb-3">
                        <label class="form-label text-white">Açıklama</label>
                        <textarea asp-for="Description" class="form-control"></textarea>
                    </div>

                    <div class="mb-3">
                        <label class="form-label text-white">Fiyat</label>
                        <input type="number" asp-for="Price" class="form-control" />
                    </div>

                    <div class="mb-3">
                        <label class="form-label text-white">Resim URL</label>
                        <input type="text" asp-for="ImageUrl" class="form-control" />
                    </div>

                    <div class="mb-3">
                        <label class="form-label text-white">Durum</label>
                        <select asp-for="ProductStatus" class="form-control">
                            <option value="true">Aktif</option>
                            <option value="false">Pasif</option>
                        </select>
                    </div>

                    <div class="mb-3">
                        <label class="form-label text-white">Kategori</label>
                        <select asp-for="CategoryID" class="form-control" asp-items="ViewBag.Categories">
                            <option value="">-- Kategori Seçin --</option>
                        </select>
                    </div>

                    <button type="submit" class="btn btn-success">Ürünü Kaydet</button>
                </form>
            </div>
        </div>
    </div>
</div>
